<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8F8"
    tools:context=".DetailActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toTopOf="@+id/spinDetail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="540dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtNama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/alkatra_medium"
                    android:foregroundGravity="center"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Nama Mahasiswa"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtNrp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/alkatra_medium"
                    android:text="NRP Mahasiswa"
                    android:textAlignment="center"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|end"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/gbrMhs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    tools:srcCompat="@tools:sample/avatars" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/alkatra_medium"
        android:text="DETAIL USER"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/alkatra_medium"
        android:text="Program"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinDetail" />

    <Spinner
        android:id="@+id/spinDetail"
        android:layout_width="370dp"
        android:layout_height="54dp"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="468dp"
        android:layout_weight="1"
        android:scrollbarSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="92dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.0">

        <RadioButton
            android:id="@+id/btnDSAI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alkatra_medium"
            android:text="DSAI" />

        <RadioButton
            android:id="@+id/btnNCS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alkatra_medium"
            android:text="NCS" />

        <RadioButton
            android:id="@+id/btnIMES"
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alkatra_medium"
            android:text="IMES" />

        <RadioButton
            android:id="@+id/btnDMT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alkatra_medium"
            android:text="DMT" />

        <RadioButton
            android:id="@+id/btnGD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alkatra_medium"
            android:text="GD" />
    </RadioGroup>

    <Button
        android:id="@+id/btnAddFriend"
        android:layout_width="150dp"
        android:layout_height="54dp"
        android:layout_marginTop="204dp"
        android:layout_marginBottom="36dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="Request Friend"
        android:textColorLink="@android:color/holo_green_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.951"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDetail" />

    <TextView
        android:id="@+id/txtDetail"
        android:layout_width="283dp"
        android:layout_height="150dp"
        android:layout_marginTop="24dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.875"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinDetail" />

</androidx.constraintlayout.widget.ConstraintLayout>