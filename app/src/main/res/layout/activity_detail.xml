<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listCard_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8F8"
    tools:context=".DetailActivity">

    <Spinner
        android:id="@+id/spinner_detail"
        android:layout_width="370dp"
        android:layout_height="54dp"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:scrollbarSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.43"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="385dp"
        android:layout_height="173dp"
        android:layout_margin="20dp"
        android:gravity="clip_vertical"
        android:orientation="horizontal"
        android:padding="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.114">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="125dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNama"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:fontFamily="sans-serif-black"
                android:text="Angel Clara Meong"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDeskripsi"
                android:layout_width="178dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:text="NRP Doang"
                android:textAlignment="center"
                android:textSize="10sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="150dp"
            android:layout_height="112dp"
            android:layout_marginTop="5dp"
            android:fadingEdge="horizontal"
            android:scaleType="centerCrop"
            tools:srcCompat="@drawable/meongui" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="DETAIL USER"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Program"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="92dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/btnDSAI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DSAI" />

        <RadioButton
            android:id="@+id/btnNCS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NCS" />

        <RadioButton
            android:id="@+id/btnIMES"
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:text="IMES" />

        <RadioButton
            android:id="@+id/btnDMT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DMT" />

        <RadioButton
            android:id="@+id/btnGD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GD" />
    </RadioGroup>

    <Button
        android:id="@+id/btnAddFriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="36dp"
        android:background="#4CAF50"
        android:text="Request Friend"
        android:textColorLink="#4CAF50"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>